{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@rps/buillion-frontend-core": ["libs/frontend-core/src/index.ts"],
      "@rps/buillion-frontend-core/core": [
        "libs/frontend-core/src/core/index.ts"
      ],
      "@rps/buillion-frontend-core/fixtures": [
        "libs/frontend-core/src/fixtures/index.ts"
      ],
      "@rps/buillion-frontend-core/mock": [
        "libs/frontend-core/src/mock/index.ts"
      ],
      "@rps/buillion-frontend-core/services": [
        "libs/frontend-core/src/services/index.ts"
      ],
      "@rps/buillion-frontend-core/services/*": [
        "libs/frontend-core/src/services/*"
      ],
      "@rps/bullion-functions": ["libs/functions/src/index.ts"],
      "@rps/bullion-functions/core": ["libs/functions/src/core/index.ts"],
      "@rps/bullion-interfaces": ["libs/core/interfaces/src/index.ts"],
      "@rps/bullion-interfaces/calc": [
        "libs/core/interfaces/src/calc/index.ts"
      ],
      "@rps/bullion-interfaces/calc/*": ["libs/core/interfaces/src/calc/*"],
      "@rps/bullion-interfaces/core": [
        "libs/core/interfaces/src/core/index.ts"
      ],
      "@rps/bullion-interfaces/core/*": ["libs/core/interfaces/src/core/*"],
      "@rps/bullion-rate-tables": ["libs/rate-tables/src/index.ts"],
      "@rps/bullion-rate-tables/table1": [
        "libs/rate-tables/src/lib/rate-tables-1/rate-tables-1.component.ts"
      ],
      "@rps/bullion-rate-tables/table2": [
        "libs/rate-tables/src/lib/rate-tables-2/rate-tables-2.component.ts"
      ],
      "@rps/bullion-rate-tables/table3": [
        "libs/rate-tables/src/lib/rate-tables-3/rate-tables-3.component.ts"
      ],
      "@rps/bullion-rate-tables/table4": [
        "libs/rate-tables/src/lib/rate-tables-4/rate-tables-4.component.ts"
      ],
      "@rps/bullion-rate-tables/table5": [
        "libs/rate-tables/src/lib/rate-tables-5/rate-tables-5.component.ts"
      ],
      "@rps/bullion-rate-tables/table7": [
        "libs/rate-tables/src/lib/rate-tables-7/rate-tables-7.component.ts"
      ],
      "@rps/bullion-rate-tables/table6": [
        "libs/rate-tables/src/lib/rate-tables-6/rate-tables-6.component.ts"
      ],
      "@rps/bullion-validator-roots": ["libs/core/validator-roots/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
